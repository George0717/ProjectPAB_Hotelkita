<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:id="@+id/iv_fot"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/iv_foto"
            android:paddingRight="2dp"
            />
        <ImageView
            android:id="@+id/iv_foto2"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/iv_foto"
            android:layout_toRightOf="@id/iv_fot"
            android:paddingRight="2dp"/>
        <ImageView
            android:id="@+id/iv_foto3"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/iv_foto"
            android:layout_toRightOf="@+id/iv_foto2"
            android:paddingRight="2dp"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Hotel"
            android:padding="6dp"
            android:layout_marginTop="20px"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_below="@+id/iv_fot"/>

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Hotel"
            android:padding="6dp"
            android:textSize="15dp"
            android:justificationMode="inter_word"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_below="@id/tv_nama"
            />
        <TextView
            android:id="@+id/tv_title_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:layout_below="@+id/tv_alamat"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/tv_desk_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_below="@id/tv_title_about"
            />

        <Button
            android:id="@+id/btn_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_desk_hotel"
            android:paddingTop="10dp"
            android:text="Buka Map"
            android:layout_marginTop="300px"/>


    </RelativeLayout>

</ScrollView>